module ext_counter
	#(parameter WIDTH = 8)
(
	input  clk,
	input  reset,
	input  enable,
	output [WIDTH-1:0] count
);

	reg [WIDTH-2:0] cheatCount;
	
	initial begin
		cheatCount = 0;
	end
	
	assign count = {cheatCount, clk};
	
	always @(negedge clk) begin
		cheatCount = reset ? 0 : enable ? cheatCount + 1 : cheatCount;
	end
	
endmodule